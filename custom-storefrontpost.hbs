{{!< default}}

<main class="site-main">

    {{#post}}
    
    <article class="gh-article {{post_class}}">

        <header class="gh-article-header gh-canvas">

            <h1 class="gh-article-title">{{title}}</h1>

            {{#if custom_excerpt}}
                <p class="gh-article-excerpt">{{custom_excerpt}}</p>
            {{/if}}
            
            {{> "post-image"}}
        </header>
        <div class="price">{{title}} for only <span class="pricetag" id="{{slug}}"></span></div>
        <span style="z-index: 10" data_slug="{{slug}}" class="post-more addtocart">Add to cart</span>
        <div class="gh-content gh-canvas">
            {{content}}
        </div>

    </article>

    {{> "post-navigation"}}

    {{#if comments}}
        <div class="gh-comments gh-canvas">
            {{comments}}
        </div>
    {{/if}}

    {{/post}}

    {{#if @custom.show_related_posts}}
        {{> "related-posts"}}
    {{/if}}

</main>

<script> 
 const cartEls = document.querySelectorAll('.addtocart');

cartEls.forEach(element=> {
  element.addEventListener('click', function handleClick(event) {
  console.log(event.target.getAttribute("data_slug"));
  addToCart(event.target.getAttribute("data_slug"))

  });
});

</script> 